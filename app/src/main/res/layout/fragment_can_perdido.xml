<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
                name="vm"
                type="com.durand.dogedex.ui.user_fragment.my_can_lost.CanPerdidoViewModel" />
    </data>
    
    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        
        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                <!-- Título principal -->
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Registrar can perdido"
                        android:textColor="@color/black"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_marginBottom="24dp" />

                <!-- Sección: Datos del can -->
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Datos del can"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="16dp" />

                <!-- Nombre del can -->
                <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Nombre del can"
                        android:layout_marginBottom="16dp"
                        app:boxBackgroundColor="@color/white">

                    <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/nombreTextInputEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text"
                            android:textColor="@color/black"
                            android:textSize="16sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Foto del can -->
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Foto del can"
                        android:textColor="@color/text_black"
                        android:textSize="14sp"
                        android:layout_marginBottom="8dp" />

                <FrameLayout
                        android:id="@+id/photoContainer"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_marginBottom="12dp"
                        android:background="@drawable/photo_placeholder_background"
                        android:clickable="true"
                        android:focusable="true">
                    
                    <ImageView
                            android:id="@+id/fotoImageView"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:contentDescription="Foto de la mascota" />
                    
                    <ImageView
                            android:id="@+id/placeholderIcon"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_gravity="center"
                            android:src="@drawable/photo_placeholder_icon"
                            android:contentDescription="Agregar foto" />
                    
                    <TextView
                            android:id="@+id/placeholderText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|bottom"
                            android:layout_marginBottom="20dp"
                            android:text="Toca para agregar foto"
                            android:textColor="#9E9E9E"
                            android:textSize="14sp" />
                </FrameLayout>

                <!-- Botones de foto -->
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="16dp">

                    <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/btnTomarFoto"
                            style="@style/Widget.AppCompat.Button"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginEnd="8dp"
                            android:text="Tomar foto"
                            android:textAllCaps="false" />

                    <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/btnSubirFoto"
                            style="@style/Widget.AppCompat.Button"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            android:text="Subir foto"
                            android:textAllCaps="false" />
                </LinearLayout>

                <!-- Raza (Dropdown) -->
                <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense.ExposedDropdownMenu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Raza"
                        android:layout_marginBottom="16dp"
                        app:boxBackgroundColor="@color/white">

                    <AutoCompleteTextView
                            android:id="@+id/razaAutoCompleteTextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="none"
                            android:textColor="@color/black"
                            android:textSize="16sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Tamaño (RadioButtons) -->
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tamaño"
                        android:textColor="@color/text_black"
                        android:textSize="14sp"
                        android:layout_marginBottom="8dp" />

                <RadioGroup
                        android:id="@+id/tamanioRadioGroup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="16dp">

                    <RadioButton
                            android:id="@+id/radioPequeño"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Pequeño"
                            android:textColor="@color/black" />

                    <RadioButton
                            android:id="@+id/radioMediano"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Mediano"
                            android:textColor="@color/black" />

                    <RadioButton
                            android:id="@+id/radioGrande"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Grande"
                            android:textColor="@color/black" />
                </RadioGroup>

                <!-- Color principal (Dropdown) -->
                <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense.ExposedDropdownMenu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Color principal"
                        android:layout_marginBottom="16dp"
                        app:boxBackgroundColor="@color/white">

                    <AutoCompleteTextView
                            android:id="@+id/colorAutoCompleteTextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="none"
                            android:textColor="@color/black"
                            android:textSize="16sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Especie (Dropdown) -->
                <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense.ExposedDropdownMenu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Especie"
                        android:layout_marginBottom="16dp"
                        app:boxBackgroundColor="@color/white">

                    <AutoCompleteTextView
                            android:id="@+id/especieAutoCompleteTextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="none"
                            android:textColor="@color/black"
                            android:textSize="16sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Género (Dropdown) -->
                <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense.ExposedDropdownMenu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Género"
                        android:layout_marginBottom="16dp"
                        app:boxBackgroundColor="@color/white">

                    <AutoCompleteTextView
                            android:id="@+id/generoAutoCompleteTextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="none"
                            android:textColor="@color/black"
                            android:textSize="16sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Carácter (Dropdown) -->
                <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense.ExposedDropdownMenu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Carácter"
                        android:layout_marginBottom="16dp"
                        app:boxBackgroundColor="@color/white">

                    <AutoCompleteTextView
                            android:id="@+id/caracterAutoCompleteTextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="none"
                            android:textColor="@color/black"
                            android:textSize="16sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Pelaje (Dropdown) -->
                <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense.ExposedDropdownMenu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Pelaje"
                        android:layout_marginBottom="24dp"
                        app:boxBackgroundColor="@color/white">

                    <AutoCompleteTextView
                            android:id="@+id/pelajeAutoCompleteTextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="none"
                            android:textColor="@color/black"
                            android:textSize="16sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Sección: Datos de la pérdida -->
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Datos de la pérdida"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Última ubicación vista"
                        android:textColor="@color/text_black"
                        android:textSize="14sp"
                        android:layout_marginBottom="12dp" />

                <!-- Botones de ubicación -->
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                    <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/btnUsarMiUbicacion"
                            style="@style/Widget.AppCompat.Button"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginEnd="8dp"
                            android:text="Usar mi ubicación"
                            android:textAllCaps="false" />

                    <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/btnMarcarEnMapa"
                            style="@style/Widget.AppCompat.Button"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            android:text="Marcar en el mapa"
                            android:textAllCaps="false" />
                </LinearLayout>

                <!-- Mapa -->
                <fragment
                        android:id="@+id/map"
                        android:name="com.google.android.gms.maps.SupportMapFragment"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:layout_marginBottom="16dp" />

                <!-- Lugar de pérdida -->
                <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Lugar de pérdida"
                        android:layout_marginBottom="24dp"
                        app:boxBackgroundColor="@color/white">

                    <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/lugarPerdidaTextInputEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="none"
                            android:textColor="@color/black"
                            android:textSize="16sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Sección: Contacto del propietario -->
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Contacto del propietario"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="16dp" />

                <!-- Nombre del propietario -->
                <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Nombre del propietario"
                        android:layout_marginBottom="16dp"
                        app:boxBackgroundColor="@color/white">

                    <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/nombreUsuarioTextInputEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textPersonName"
                            android:textColor="@color/black"
                            android:textSize="16sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Apellido del propietario -->
                <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Apellido del propietario"
                        android:layout_marginBottom="16dp"
                        app:boxBackgroundColor="@color/white">

                    <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/apellidoUsuarioTextInputEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textPersonName"
                            android:textColor="@color/black"
                            android:textSize="16sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Comentarios -->
                <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Comentarios (opcional)"
                        android:layout_marginBottom="24dp"
                        app:boxBackgroundColor="@color/white">

                    <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/comentarioTextInputEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textMultiLine"
                            android:lines="3"
                            android:gravity="top|start"
                            android:textColor="@color/black"
                            android:textSize="16sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Botón Enviar reporte -->
                <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/confirmAppCompatButton"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:background="@drawable/btn_blue_selector"
                        android:elevation="4dp"
                        android:text="Enviar reporte"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="24dp" />

            </LinearLayout>
        </ScrollView>

        <!-- ProgressBar -->
        <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:indeterminateTint="@color/color_primary"
                android:visibility="gone" />
    </FrameLayout>

</layout>